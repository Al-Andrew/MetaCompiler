{
    "meta" : {
        "name" : "Meta compiler language",
        "bin" : "compiler",
        "version" : "0.1.0"
    },
    "tokens": [

        { "name": "LPAREN", "matcher": "(", "is_regex": false}, 
        { "name": "RPAREN", "matcher": ")", "is_regex": false},
        { "name": "EQUALS", "matcher": "=", "is_regex": false},
        { "name": "PLUS", "matcher": "+", "is_regex": false},

        { "name": "KEYWORD_MODULE", "matcher": "module", "is_regex": false},
        { "name": "KEYWORD_FUNC", "matcher": "func", "is_regex": false},
        { "name": "KEYWORD_START", "matcher": "start", "is_regex": false},
        { "name": "KEYWORD_EMBED", "matcher": "start", "is_regex": false},
        { "name": "KEYWORD_LET", "matcher": "let", "is_regex": false},


        { "name": "TYPE_I8", "matcher": "i8", "is_regex": false},
        { "name": "TYPE_I16", "matcher": "i16", "is_regex": false},
        { "name": "TYPE_I32", "matcher": "i32", "is_regex": false},
        { "name": "TYPE_I64", "matcher": "i64", "is_regex": false},
        { "name": "TYPE_U8", "matcher": "u8", "is_regex": false},
        { "name": "TYPE_U16", "matcher": "u16", "is_regex": false},
        { "name": "TYPE_U32", "matcher": "u32", "is_regex": false},
        { "name": "TYPE_U64", "matcher": "u64", "is_regex": false},
        { "name": "TYPE_F32", "matcher": "f32", "is_regex": false},
        { "name": "TYPE_F64", "matcher": "f64", "is_regex": false},
        { "name": "TYPE_BOOL", "matcher": "bool", "is_regex": false},
        
        { "name": "LITERAL_I8", "matcher": "[1-9][0-9]{0,2}i8", "is_regex": true},

        { "name": "IDENTIFIER", "matcher": "[_a-zA-Z][_\\-a-zA-Z0-9]*", "is_regex": true},

        { "name": "TODO", "matcher": "TODO", "is_regex": false}
    ],
    "rules" : [
        {
            "name": "empty",
            "constructions": [
                {
                    "tag": "base",
                    "symbols": [
                        "LPAREN",
                        "RPAREN"
                    ],
                    "action" : ""
                }
            ]
        },
        {
            "name": "module",
            "constructions": [
                {
                    "tag": "base",
                    "symbols": [
                        "LPAREN",
                        "KEYWORD_MODULE",
                        "IDENTIFIER",
                        "definitions_only_scope",
                        "RPAREN"
                    ],
                    "action" : ""
                }
            ]
        },
        {
            "name": "definition",
            "constructions": [
                {
                    "tag": "func",
                    "symbols": [
                        "TODO"
                    ],
                    "action" : ""
                },
                {
                    "tag": "let",
                    "symbols": [
                        "TODO"
                    ],
                    "action" : ""
                }
            ]
        },
        {
            "name": "definitions_only_list",
            "constructions" : [
                {
                    "tag": "base",
                    "symbols": [
                        "definition"
                    ],
                    "action" : ""
                },
                {
                    "tag": "list_recursive",
                    "symbols": [
                        "definitions_only_list",
                        "definition"
                    ],
                    "action" : ""
                }
            ]
        },
        {
            "name": "definitions_only_scope",
            "constructions": [
                {
                    "tag": "empty",
                    "symbols": [
                        "empty"
                    ],
                    "action" : ""
                },
                {
                    "tag": "base",
                    "symbols": [
                        "LPAREN",
                        "definitions_only_list",
                        "RPAREN"
                    ],
                    "action" : ""
                }
            ]
        }
    ],
    "start_rule": "module"
}